<% if user_signed_in? %>
  <div class="row justify-content-center">
    <div class="col-6">
      <%= form_with model: @post do |f| %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <div class="mb-3">
          <%= f.text_area :body, placeholder: "O que vocÃª conta?", class: "form-control" %>
        </div>
        <%= f.submit "Enviar", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
<% end %>
<div class="row justify-content-center mt-3">
  <div class="col-6">
    <div class="row">
      <% @posts.each do |post| %>
        <div class="col-12 mb-3">
          <div class="card shadow-sm">
            <div class="card-body">
              <p class="card-text">
                <%= post.body %>
              </p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to "Curtir", like_path(id: post.id), class: "btn btn-sm btn-outline-primary" %>
                  <label class="btn  btn-sm btn-outline-primary" for="btncheck2"><%= post.likes.count %> curtidas</label>
                </div>
                <small class="text-muted"><%= post.created_at.strftime("%d/%m/%Y") %></small>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
